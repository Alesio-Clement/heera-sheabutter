# Enable mod_rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Ensure the base is correct (adjust if your site is in a subdirectory)
    RewriteBase /

    # If the requested file does not exist
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Rewrite URLs without .php to the actual PHP files
    RewriteRule ^([a-zA-Z0-9_-]+)$ $1.php [L]
</IfModule>
